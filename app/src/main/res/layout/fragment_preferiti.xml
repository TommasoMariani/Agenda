<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView da visualizzare se non ci sono eventi -->
    <TextView
        android:id="@+id/nessunEventoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non sono presenti eventi"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- RecyclerView per visualizzare gli eventi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPreferiti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nessunEventoTextView"
        android:padding="16dp"/>
</RelativeLayout>
